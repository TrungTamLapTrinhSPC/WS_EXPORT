<Window x:Class="MOU_CSV.Form_ManagerObject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:MOU_CSV"
        mc:Ignorable="d" 
        Title="Object Manager" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Style for Button similar to ListBoxItem -->
        <Style x:Key="CategoryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for Selected Button -->
        <Style x:Key="CategoryButtonSelected" TargetType="Button" BasedOn="{StaticResource CategoryButton}">
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>

        <!-- Style for Buttons -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#757575"/>
        </Style>

        <!-- Style for Split Button Dropdown -->
        <Style x:Key="SplitButtonDropdown" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="0,4,4,0">
                            <TextBlock Text="▼" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       FontSize="8"
                                       Foreground="White"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== LEFT SECTION: CATEGORIES LIST ===== -->
        <Border Grid.Column="0" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0"
                Background="#FAFAFA">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Name="_lb1"
                               Text="OBJECT LIST" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="#212121"/>
                    <TextBlock Name="_lb2"
                               Text="Select a category to view" 
                               FontSize="11" 
                               Foreground="#757575"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Search Box -->
                <Border Grid.Row="1" 
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,0,10">
                    <Grid>
                        <TextBox x:Name="txtSearch"
                                 BorderThickness="0"
                                 Padding="10,8"
                                 FontSize="13"
                                 VerticalContentAlignment="Center"/>
                        <TextBlock Name="_lb3"
                                   Text="🔍 Search..."
                                   IsHitTestVisible="False"
                                   Foreground="#BDBDBD"
                                   Padding="10,8"
                                   FontSize="13"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- ListBox Categories with Button instead of Checkbox -->
                <Border Grid.Row="2" 
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="4">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstCategories">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnCategory"
                Click="CategoryButton_Click"
                Tag="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource CategoryButton}">
                                                <Style.Triggers>
                                                    <!-- Trigger cho selected state -->
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="LightGray"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>

                                                    <!-- Trigger cho changed state (đỏ nhạt) -->
                                                    <DataTrigger Binding="{Binding HasChanges}" Value="True">
                                                        <Setter Property="Background" Value="#FFCDD2"/>
                                                    </DataTrigger>

                                                    <!-- MultiTrigger: Khi vừa selected vừa changed -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsSelected}" Value="True"/>
                                                            <Condition Binding="{Binding HasChanges}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="#FFB2B2"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center">
                    <Run Text="{Binding DisplayName, Mode=OneWay}"/>
                                            </TextBlock>

                                            <TextBlock FontSize="11" 
                           Foreground="#757575" 
                           VerticalAlignment="Center"
                           Margin="5,0,0,0">
                    <Run Text="{Binding CountText, Mode=OneWay}"/>
                                            </TextBlock>

                                            <!-- Icon chấm đỏ cho category có thay đổi -->
                                            <TextBlock Text="●" 
                           Foreground="#D32F2F" 
                           FontSize="10"
                           Margin="5,0,0,0"
                           VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasChanges}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Refresh Button -->
                <Button Grid.Row="3" 
                        x:Name="btnRefresh"
                        Content="🔄 REFRESH"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,10,0,0"/>
            </Grid>
        </Border>

        <!-- ===== SPLITTER ===== -->
        <GridSplitter Grid.Column="1" 
                      Width="5"
                      HorizontalAlignment="Stretch"
                      Background="#E0E0E0"
                      ShowsPreview="True"/>

        <!-- ===== RIGHT SECTION: DETAIL INFORMATION ===== -->
        <Grid Grid.Column="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Compact Header (single line) -->
            <Border Grid.Row="0" 
                    Background="#F5F5F5"
                    Padding="15,10"
                    CornerRadius="4"
                    Margin="0,0,0,10">
                <Grid>
                    <TextBlock x:Name="lblSelectedCategory"
                               Text="Select a category to view information"
                               FontSize="15"
                               FontWeight="Bold"
                               Foreground="#212121"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="lblElementCount"
                               Text=""
                               FontSize="12"
                               Foreground="#757575"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Filter and Actions Bar -->
            <Border Grid.Row="1"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filter Options -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="_lb4"
                                   Text="Filter by:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   FontWeight="SemiBold"/>
                        <ComboBox x:Name="cboFilter"
                                  Width="150"
                                  VerticalAlignment="Center">
                            <ComboBoxItem Name="_cbb1" Content="All" IsSelected="True"/>
                            <ComboBoxItem Name="_cbb2" Content="By Level"/>
                            <ComboBoxItem Name="_cbb3" Content="By Type"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">
                        <Button x:Name="btnImport"
                                Content="📥 Import CSV"
                                Style="{StaticResource ModernButton}"
                                Margin="0,0,10,0" 
                                Click="BtnImport_Click"/>

                        <!-- Split Button for Export -->
                        <Grid Margin="0,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnExportMain"
                                    Content="📤 Export Current Category CSV"
                                    Style="{StaticResource ModernButton}"
                                    Click="BtnExport_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4,0,0,4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#0D47A1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button
                                    x:Name="btnExportDropdown"
                                    Style="{StaticResource SplitButtonDropdown}"
                                    Click="BtnExportDropdown_Click" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="205,0,0,0" Width="25"/>

                            <!-- Popup menu -->
                            <Popup x:Name="popupExport"
                                   PlacementTarget="{Binding ElementName=btnExportDropdown}"
                                   Placement="Bottom"
                                   StaysOpen="False">
                                <Border Background="White"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                    <StackPanel>
                                        <Button Name="_btn1"
                                                Content="📤 Export Current Category CSV"
                                                Click="BtnExportSingle_Click"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="15,8"
                                                HorizontalContentAlignment="Left"
                                                Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button Name="_btn2"
                                                Content="📤 Export Multiple Categories CSV"
                                                Click="BtnExportMulti_Click"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="15,8"
                                                HorizontalContentAlignment="Left"
                                                Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- DataGrid Elements -->
            <Border Grid.Row="2" 
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4">
                <DataGrid x:Name="dgElements"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          BorderThickness="0"
                          GridLinesVisibility="All"
                          HorizontalGridLinesBrush="#E0E0E0"
                          VerticalGridLinesBrush="#E0E0E0"
                          RowBackground="White"
                          AlternatingRowBackground="#FAFAFA"
                          HeadersVisibility="Column"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          SelectionMode="Extended">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <Setter Property="Foreground" Value="#212121"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="0,0,1,2"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </Border>

            <!-- Compact Bottom Action Bar -->
            <Border Grid.Row="3"
                    Background="#F5F5F5"
                    Padding="12,8"
                    CornerRadius="4"
                    Margin="0,10,0,0">
                <Grid>
                    <TextBlock x:Name="lblSelectedCount"
                               Text="No objects selected"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="#757575"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="btnHighlight"
                                Content="👁 Highlight"
                                Style="{StaticResource ModernButton}" 
                                Margin="0,0,10,0"
                                Click="BtnHighlight_Click"/>
                        <Button x:Name="btnApply"
                                Content="✓ Apply Changes"
                                Style="{StaticResource ModernButton}"
                                Click="BtnApply_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>